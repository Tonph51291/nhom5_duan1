<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Tạo hóa đơn"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <!-- Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tên khách hàng" />

        <EditText
            android:id="@+id/edt_ten_kh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Nhập tên khách hàng"
            android:padding="8dp"
            android:background="@drawable/edittext_background" />
    </LinearLayout>

    <!-- Phone -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Số điện thoại" />

        <EditText
            android:id="@+id/edt_sdt_kh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Nhập số điện thoại"
            android:inputType="phone"
            android:padding="8dp"
            android:background="@drawable/edittext_background" />
    </LinearLayout>

    <!-- Address -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Địa chỉ" />

        <EditText
            android:id="@+id/edt_diachi_kh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Nhập địa chỉ"
            android:padding="8dp"
            android:background="@drawable/edittext_background" />
    </LinearLayout>

    <!-- Purchase Date -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ngày mua" />

        <EditText
            android:id="@+id/edt_ngay_mua"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Nhập ngày mua"
            android:inputType="date"
            android:padding="8dp"
            android:background="@drawable/edittext_background" />
    </LinearLayout>

    <!-- Submit Button -->
    <Button
        android:id="@+id/btn_thanhtoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tạo hóa đơn"
        android:padding="12dp"
        android:backgroundTint="@color/buttonColor" />

</LinearLayout>
