<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <FrameLayout
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="TODO"
                android:src="@drawable/avatauser"
                android:scaleType="centerCrop"
                android:layout_gravity="center"/>
        </FrameLayout>

        <TextView
            android:id="@+id/ten_nv_tt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Van Duc"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã nhân viên"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textColor="#1E1E1E"/>

        <TextView
            android:id="@+id/tv_ma_nhan_vien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:layout_marginTop="8dp"
            android:background="@drawable/back_edit_sach"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:inputType="text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Họ tên nhân viên"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textColor="#1E1E1E"/>

        <TextView
            android:id="@+id/tv_ten_nhan_vien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:layout_marginTop="8dp"
            android:background="@drawable/back_edit_sach"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:inputType="text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số tài khoản"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textColor="#1E1E1E"/>

        <TextView
            android:id="@+id/tv_so_tai_khoan_tt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/back_edit_sach"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:inputType="text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textColor="#1E1E1E"/>

        <TextView
            android:id="@+id/tv_sdt_tt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/back_edit_sach"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:inputType="phone" />

        <Button
            android:id="@+id/btn_up_ttcn"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:text="Update"
            android:layout_marginTop="24dp"
            android:backgroundTint="#2C2C2C"
            android:textColor="@android:color/white"
            android:paddingVertical="10dp"
            android:layout_gravity="center" />
    </LinearLayout>
</FrameLayout>
